    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Seguro que desea cerrar el programa?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            dispose();
        }
        
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        dispose();
        MenuAdministrador menuadministrador = new MenuAdministrador();
        menuadministrador.setVisible(true);
        
    }                                        

    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        
    if(!"".equals(txtUsuario.getText()) || !"".equals(txtContra.getText()) && (!"".equals(txtUsuario.getText()) && !"".equals(txtContra.getText()))){    
        try{
            PreparedStatement pps = cn.prepareStatement("INSERT INTO login (usuario, contra, tipousuario) VALUES (?,?,?)");
            pps.setString(1, txtUsuario.getText());
            pps.setString(2, txtContra.getText());
            pps.setString(3, (String) cbxTipoUsuario.getSelectedItem());
            pps.executeUpdate();
            JOptionPane.showMessageDialog(null, "Usuario correctamente registrado");
        } catch (SQLException ex){
            //Logger.getLogger(CrearUsuario.class.getName()).log(Level.SEVERE, null, ex);
            JOptionPane.showMessageDialog(null, "No se puede repetir el mismo nombre de usuario");
        }
        
    }
    else
        JOptionPane.showMessageDialog(null, "No puede dejar casilleros en blanco");
    }                                          

