    private void btnAtrasActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:

        dispose();
        EliminarCuerdas eliminarcuerdas = new EliminarCuerdas();
        eliminarcuerdas.setVisible(true);
    }                                        

    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:

        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Seguro que desea cerrar el programa?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            dispose();
        }
    }                                        

    private void cbxCodigoViolinActionPerformed(java.awt.event.ActionEvent evt) {                                                
        try {           
            cargarDatos(rs);
        } catch (SQLException ex) {
            Logger.getLogger(EliminarViolin.class.getName()).log(Level.SEVERE, null, ex);
        } catch (IOException ex) {
            Logger.getLogger(EliminarViolin.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                               

    private void btnEliminarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        
        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Seguro que desea eliminar este registro?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            
            String eliminar = "DELETE from IngresarViolin where codigo_violin='"+cbxCodigoViolin.getSelectedItem()+"'";
            try {
                PreparedStatement pst = cn.prepareStatement(eliminar);
                
                int i = pst.executeUpdate();
                
                if(i > 0){
                    JOptionPane.showMessageDialog(null, "Se elimino correctamente");
                    mostrarTabla();
                }
            } catch (SQLException ex) {
                Logger.getLogger(ModificarViolin.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
        
        limpiar();
        cbxCodigoViolin.removeAllItems();
        cargarCodigoViolin();
        
        try {
            cargarDatos(rs);
        } catch (SQLException ex) {
            Logger.getLogger(EliminarViolin.class.getName()).log(Level.SEVERE, null, ex);
        } catch (IOException ex) {
            Logger.getLogger(EliminarViolin.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                           

