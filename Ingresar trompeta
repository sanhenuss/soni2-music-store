    }                                        

    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:

        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Seguro que desea cerrar el programa?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            dispose();
        }
    }                                        

    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        
        String insertar = "INSERT INTO Trompeta (codigo_trompeta, tipo_trompeta, marca_trompeta, color_trompeta, tamano_trompeta, cantidad_pistones_trompeta, precio_trompeta, cantidad_trompeta, direccion_imagen_trompeta, foto_trompeta) VALUES (?,?,?,?,?,?,?,?,?,?)";
        
        try{
            FileInputStream archivofoto;
            PreparedStatement pst = cn.prepareStatement(insertar);
            pst.setString(1, txtCodigoViolin.getText());
            pst.setString(2, (String) cbxTipoTrompeta.getSelectedItem());
            pst.setString(3, (String) cbxMarcaTrompeta.getSelectedItem());
            pst.setString(4, txtColorTrompeta.getText());
            pst.setString(5, txtTamanoTrompeta.getText());
            pst.setString(6, txtCantidadPistonesTrompeta.getText());
            pst.setString(7, txtPrecioTrompeta.getText());
            pst.setString(8, txtCantidadTrompeta.getText());
            
            archivofoto = new FileInputStream(txtDireccionImagen.getText());
            pst.setString(9, txtDireccionImagen.getText());
            pst.setBinaryStream(10, archivofoto);
            
            int i = pst.executeUpdate();
                
                if(i > 0){
                    JOptionPane.showMessageDialog(null, "Se guardo correctamente");
                    mostrarTabla();
                    limpiar();
                }
        } catch (SQLException | FileNotFoundException ex) {
            Logger.getLogger(IngresoTrompeta.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }                                          

