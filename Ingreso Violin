    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:

        int opc = JOptionPane.showConfirmDialog(rootPane, "多Seguro que desea cerrar el programa?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            dispose();
        }
    }                                        

    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        
        String insertar = "INSERT INTO IngresarViolin (codigo_violin, marca_violin, categoria_violin, color_violin, tamano_violin, medida_violin, edad_promedio_violin, precio_violin, cantidad_violin, direccion_imagen_violin, foto_violin) VALUES (?,?,?,?,?,?,?,?,?,?,?)";
        
        try{
            FileInputStream archivofoto;
            PreparedStatement pst = cn.prepareStatement(insertar);
            pst.setString(1, txtCodigoViolin.getText());
            pst.setString(2, (String) cbxMarcaViolin.getSelectedItem());
            pst.setString(3, (String) cbxCategoriaViolin.getSelectedItem());
            pst.setString(4, txtColor.getText());
            pst.setString(5, txtTamano.getText());
            pst.setString(6, txtMedida.getText());
            pst.setString(7, txtEdadPromedio.getText());
            pst.setString(8, txtPrecioViolin.getText());
            pst.setString(9, txtCantidadViolin.getText());
            
            archivofoto = new FileInputStream(txtDireccionImagen.getText());
            pst.setString(10, txtDireccionImagen.getText());
            pst.setBinaryStream(11, archivofoto);
            
            int i = pst.executeUpdate();
                
                if(i > 0){
                    JOptionPane.showMessageDialog(null, "Se guardo correctamente");
                    mostrarTabla();
                    limpiar();
                }
        } catch (SQLException ex) {
            Logger.getLogger(IngresoViolin.class.getName()).log(Level.SEVERE, null, ex);
        } catch (FileNotFoundException ex) {
            Logger.getLogger(IngresoViolin.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }                                          

