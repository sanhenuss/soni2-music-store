        IngresarCuerdas ingresarcuerdas = new IngresarCuerdas();
        ingresarcuerdas.setVisible(true);
    }                                        

    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:

        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Seguro que desea cerrar el programa?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            dispose();
        }
    }                                        

    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        
        String insertar = "INSERT INTO Guitarra (codigo_guitarra, tipo_guitarra, marca_guitarra, color_guitarra, tamano_guitarra, tipo_cuerda_guitarra, precio_guitarra, cantidad_guitarra, direccion_imagen_guitarra, foto_guitarra) VALUES (?,?,?,?,?,?,?,?,?,?)";
        
        try{
            FileInputStream archivofoto;
            PreparedStatement pst = cn.prepareStatement(insertar);
            pst.setString(1, txtCodigoGuitarra.getText());
            pst.setString(2, (String) cbxTipoGuitarra.getSelectedItem());
            pst.setString(3, (String) cbxMarcaGuitarra.getSelectedItem());            
            pst.setString(4, txtColorGuitarra.getText());
            pst.setString(5, txtTamanoGuitarra.getText());
            pst.setString(6, (String) cbxTipoCuerdaGuitarra.getSelectedItem());  
            pst.setString(7, txtPrecioGuitarra.getText());
            pst.setString(8, txtCantidadGuitarra.getText());
            
            archivofoto = new FileInputStream(txtDireccionImagen.getText());
            pst.setString(9, txtDireccionImagen.getText());
            pst.setBinaryStream(10, archivofoto);
            
            int i = pst.executeUpdate();
                
                if(i > 0){
                    JOptionPane.showMessageDialog(null, "Se guardo correctamente");
                    mostrarTabla();
                    limpiar();
                }
        } catch (SQLException ex) {
            Logger.getLogger(IngresoGuitarra.class.getName()).log(Level.SEVERE, null, ex);
        } catch (FileNotFoundException ex) {
            Logger.getLogger(IngresoGuitarra.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }                                          

