    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Seguro que desea cerrar el programa?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            dispose();
        }
        
    }                                        

    private void btnIngresarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        
        String usuario = txtUsuario.getText();
        String contra = txtContra.getText();
        if(usuario.equals("")){
            JOptionPane.showMessageDialog(null, "Debe ingresar un usuario valido");
        }
        if(contra.equals("")){
            JOptionPane.showMessageDialog(null, "Debe ingresar una contraseña valida");
        }
        else{
            try {
                login(usuario, contra);
            } catch (SQLException ex) {
                JOptionPane.showMessageDialog(null, ex);
            }
        }
    }                                           

    public void login(String usuario, String contra) throws SQLException{
        
        String SQL = "";
        String TipoUsuario = "";
        ConectaBD con = new ConectaBD();
        Connection cnn = con.getConnection();
        SQL = "select * from login  where usuario = '" + usuario + "' and contra = '" + contra + "'";
        Statement st = cnn.createStatement();
        ResultSet rs = st.executeQuery(SQL);
        while(rs.next()){
            TipoUsuario = rs.getString("tipousuario");
        }
        if(TipoUsuario.equals("administrador")){
            dispose();
            MenuAdministrador menuadministrador = new MenuAdministrador();
            menuadministrador.setVisible(true);
        }
        if(TipoUsuario.equals("vendedor")){
            dispose();
            MenuVendedor menuvendedor = new MenuVendedor();
            menuvendedor.setVisible(true);
        }
        txtUsuario.setText("");
        txtContra.setText("");
        txtUsuario.requestFocus();
    }
    
