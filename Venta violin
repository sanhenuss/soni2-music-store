    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:

        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Seguro que desea cerrar el programa?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            dispose();
        }
    }                                        

    private void btnAtrasActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        dispose();
        VentaInstrumentos ventainstrumentos = new VentaInstrumentos();
        ventainstrumentos.setVisible(true);
    }                                        

    private void btnAceptarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        
        int cantidadDisponible = Integer.parseInt(txtCantidadViolin.getText());
        int cantidadComprar = Integer.parseInt(txtCantidadAComprar.getText());
        int precioUnitario = Integer.parseInt(txtPrecio.getText());
        
      if(cantidadDisponible >= cantidadComprar && cantidadComprar > 0){
        
        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Realizar venta?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {    
            txtPagoTotal.setEditable(true);
            txtPagoTotal.setEnabled(true);
            btnPagar.setEnabled(true);
            btnCancelar.setEnabled(true);
            int cantidadACobrar;
            cantidadACobrar = precioUnitario * cantidadComprar;
            String cadena = "";
            
            cadena = String.valueOf(cantidadACobrar);
            cadena = Integer.toString(cantidadACobrar);
            txtPagoTotal.setText(cadena);
        }
        
       }else{
          JOptionPane.showMessageDialog(null, "Cantidad deseada excedida o no valida", "Alerta del sistema", JOptionPane.WARNING_MESSAGE);
          txtCantidadAComprar.setText("");
      } 
    }                                          

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        
        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Seguro que desea cancelar la venta?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            txtPagoTotal.setEditable(false);
            txtPagoTotal.setEnabled(false);
            btnPagar.setEnabled(false);
            btnCancelar.setEnabled(false);
            txtPagoTotal.setText("");
            txtCantidadAComprar.setText("");
        }
        
    }                                           

    private void btnPagarActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        int opc = JOptionPane.showConfirmDialog(rootPane, "¿Seguro que desea realizar la venta?", "Alerta", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE);
        if (opc == JOptionPane.YES_OPTION) {
            
            String insertar = "INSERT INTO ventasViolin (codigo_instrumento, marca, cantidad_vendida, precio_unitario, pago_total) VALUES (?,?,?,?,?)";
            
            try {
                PreparedStatement pst = cn.prepareStatement(insertar);
                pst.setString(1, (String) cbxCodigoViolin.getSelectedItem());
                pst.setString(2, txtMarca.getText());
                pst.setString(3, txtCantidadAComprar.getText());
                pst.setString(4, txtPrecio.getText());
                pst.setString(5, txtPagoTotal.getText());
                
                int i = pst.executeUpdate();
            } catch (SQLException ex) {
                Logger.getLogger(VentaViolin.class.getName()).log(Level.SEVERE, null, ex);
            }
            
            int cantidadDisponible = Integer.parseInt(txtCantidadViolin.getText());
            int cantidadComprar = Integer.parseInt(txtCantidadAComprar.getText());
            int nuevaCantidad;
            nuevaCantidad = 0;
            
            nuevaCantidad = cantidadDisponible - cantidadComprar;
            
            String modificar = "UPDATE Violin set cantidad_violin = '" + nuevaCantidad + "' where codigo_violin='"+cbxCodigoViolin.getSelectedItem()+"'";
            
            try {
                PreparedStatement pst = cn.prepareStatement(modificar);
                
                int i;
                i = pst.executeUpdate();
                
                if(i > 0){
                    mostrarTabla();
                }
                
                
            } catch (SQLException ex) {
                Logger.getLogger(VentaViolin.class.getName()).log(Level.SEVERE, null, ex);
            }
            
            JOptionPane.showMessageDialog(null, "Venta registrada", "Venta exitosa", JOptionPane.INFORMATION_MESSAGE);
            
            
            try {
                cargarDatos(rs);
            } catch (SQLException ex) {
                Logger.getLogger(VentaViolin.class.getName()).log(Level.SEVERE, null, ex);
            } catch (IOException ex) {
                Logger.getLogger(VentaViolin.class.getName()).log(Level.SEVERE, null, ex);
            }
            
            txtPagoTotal.setEditable(false);
            txtPagoTotal.setEnabled(false);
            btnPagar.setEnabled(false);
            btnCancelar.setEnabled(false);
            txtPagoTotal.setText("");
            txtCantidadAComprar.setText("");
            
        }
        
    }                                        

    private void cbxCodigoViolinActionPerformed(java.awt.event.ActionEvent evt) {                                                
        try {
            // TODO add your handling code here:
            
            cargarDatos(rs);
            txtPagoTotal.setEditable(false);
            txtPagoTotal.setEnabled(false);
            btnPagar.setEnabled(false);
            btnCancelar.setEnabled(false);
            txtPagoTotal.setText("");
            txtCantidadAComprar.setText("");
        } catch (SQLException ex) {
            Logger.getLogger(VentaViolin.class.getName()).log(Level.SEVERE, null, ex);
        } catch (IOException ex) {
            Logger.getLogger(VentaViolin.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        
    }                                               

