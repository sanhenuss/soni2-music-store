    public void cargarCodigoViolin(){
        String sql = "select distinct codigo_violin from Violin";
        Statement st;
        try {
            st = cn.createStatement();
            rs = st.executeQuery(sql);
            while(rs.next()){
                cbxCodigoViolin.addItem(rs.getString(1));
            }
        } catch (SQLException ex) {
            Logger.getLogger(ConsultaUsuario.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }
    
    public void cargarDatos(ResultSet rs) throws SQLException, IOException  {
        String sql2="select marca_violin, precio_violin, cantidad_violin, direccion_imagen_violin, foto_violin from Violin where codigo_violin='"+cbxCodigoViolin.getSelectedItem()+"'";
        Statement st;
        
        try {
            st = cn.createStatement();
            rs = st.executeQuery(sql2);
            while(rs.next()){
                txtMarca.setText(rs.getString(1));
                txtPrecio.setText(rs.getString(2));
                txtCantidadViolin.setText(rs.getString(3));
                txtDireccionImagen.setText(rs.getString(4));
                
                ByteArrayOutputStream output = new ByteArrayOutputStream();
                InputStream datos = rs.getBinaryStream(5);
                
                Image foto = getToolkit().getImage(txtDireccionImagen.getText());
                foto = foto.getScaledInstance(230, 210, Image.SCALE_DEFAULT);
                
                int temp = datos.read();
        
                while(temp >= 0){
                    output.write((char)temp);
                    temp = datos.read();
                }
                
                lblViolin.setIcon(new ImageIcon(foto));
            }
        } catch (SQLException ex) {
            Logger.getLogger(ConsultaUsuario.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        
    }
    
    void mostrarTabla(){
        DefaultTableModel modelo = new DefaultTableModel();
        modelo.addColumn("Codigo");
        modelo.addColumn("Marca");
        modelo.addColumn("Precio S/.");
        modelo.addColumn("Cantidad disponible");
        tblViolin.setModel(modelo);
        
        String sql = "select codigo_violin, marca_violin, precio_violin, cantidad_violin from Violin where estado = 'habilitado'";
        
        String datos[] = new String [4];
        Statement st;
        ResultSet rs;
        try {
            st = cn.createStatement();
            rs = st.executeQuery(sql);
            while(rs.next()){
                datos[0] = rs.getString(1);
                datos[1] = rs.getString(2);
                datos[2] = rs.getString(3);
                datos[3] = rs.getString(4);
                modelo.addRow(datos);
            }
            tblViolin.setModel(modelo);
        } catch (SQLException ex) {
            Logger.getLogger(ConsultaUsuario.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }
    
    
    
    

